{
    "name": "basic",
    "description": "Basic example for beamui",
    "homepage": "https://github.com/dayllenger/beamui",
    "license": "BSL-1.0",
    "authors": ["dayllenger"],

    "targetName": "basic",
    "targetPath": "bin",
    "targetType": "executable",

    "sourceFiles-windows": ["$PACKAGE_DIR/src/win_app.def"],

    "dependencies": {
        "beamui": {"path": "../../"}
    },

    "configurations" : [
        {
            "name" : "default"
        },
        {
            "name" : "console",
            "subConfigurations" : {
                "beamui" : "console"
            }
        },
        {
            "name" : "sdl",
            "subConfigurations" : {
                "beamui" : "sdl"
            }
        },
        {
            "name" : "x11",
            "subConfigurations" : {
                "beamui" : "x11"
            }
        },
        {
            "name" : "minimal",
            "subConfigurations" : {
                "beamui" : "minimal"
            }
        }
    ]
}
