{
    "name": "beamui",
    "description": "Web-inspired retained-mode UI framework",
    "homepage": "https://github.com/dayllenger/beamui",
    "license": "Boost",
    "authors": ["dayllenger", "Vadim Lopatin"],

    "targetName": "beamui",
    "targetPath": "lib",
    "targetType": "staticLibrary",

    "sourcePaths": [
        "3rdparty", "src"
    ],

    "importPaths": [
        "3rdparty", "src"
    ],

    "libs-linux": ["z"],

    "stringImportPaths": [
        "res"
    ],

    "debugVersions": [],

    "-ddoxFilterArgs": ["--min-protection=Protected", "--ex", "android", "--ex", "dimage", "--ex", "fontconfig",
        "--ex", "EGL", "--ex", "GLES", "--ex", "GLES2", "--ex", "GLES3", "--ex", "jni"],

    "sourceFiles-windows-x86-dmd": ["$PACKAGE_DIR/src/win_app.def"],
    "excludedSourceFiles-windows": ["3rdparty/fontconfig/*"],

    "subPackages": [
        "./examples/advanced/",
        "./examples/basic/",
        "./examples/css/",
        "./examples/opengl/",
    ],

    "dependencies": {
        "isfreedesktop": "~>0.1.1",
        "mofile": "~>0.2.1",
    },

    "dependencies-posix": {
        "icontheme": "~>1.2.2",
        "inilike": "~>1.1.0",
        "xdgpaths": "~>0.2.5"
    },

    "configurations": [
        {
            "name": "default",
            "versions": ["EmbedStandardResources"],
            "versions-windows": ["Unicode"],
            "dependencies": {
                "derelict-ft": "~>1.1.2",
                "derelict-gl3": "~>1.0.18",
            },
            "dependencies-posix": {
                "derelict-sdl2": "~>2.0.0"
            },
            "copyFiles-windows-x86_64": [
                "libs/windows-x86_64/libfreetype-6.dll"
            ],
            "copyFiles-windows-x86": [
                "libs/windows-x86/libfreetype-6.dll"
            ]
        },
        {
            "name": "console",
            "versions": ["CONSOLE", "EmbedStandardResources"],
            "excludedSourceFiles": ["3rdparty/*GL*", "3rdparty/android", "3rdparty/dimage", "3rdparty/fontconfig/*", "3rdparty/icontheme", "3rdparty/jni.d"]
        },
        {
            "name": "external",
            "versions": ["EXTERNAL"],
            "dependencies": {
                "derelict-ft": "~>1.1.2",
                "derelict-gl3": "~>1.0.18",
            }
        },
        {
            "name": "minimal",
            "versions": ["NO_OPENGL", "EmbedStandardResources"],
            "versions-windows": ["Unicode"],
            "dependencies-posix": {
                "derelict-ft": "~>1.1.2",
                "derelict-sdl2": "~>2.0.0",
            }
        },
        {
            "name": "sdl",
            "versions": ["SDL", "FREETYPE", "EmbedStandardResources"],
            "versions-windows": ["Unicode"],
            "dependencies": {
                "derelict-ft": "~>1.1.2",
                "derelict-gl3": "~>1.0.18",
                "derelict-sdl2": "~>2.0.0",
            },
            "copyFiles-windows-x86_64": [
                "libs/windows-x86_64/libfreetype-6.dll",
                "libs/windows-x86_64/SDL2.dll"
            ],
            "copyFiles-windows-x86": [
                "libs/windows-x86/libfreetype-6.dll",
                "libs/windows-x86/SDL2.dll"
            ]
        },
        {
            "name": "x11",
            "versions": ["X11", "FREETYPE", "EmbedStandardResources"],
            "versions-windows": ["Unicode"],
            "dependencies": {
                "derelict-ft": "~>1.1.2",
                "derelict-gl3": "~>1.0.18",
                "x11": "~>1.0.17",
            }
        },
    ]
}
